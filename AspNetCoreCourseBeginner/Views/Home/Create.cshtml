@model Restaurant

@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>

<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div>
        <label asp-for="CusineType"></label>
        <select asp-for="CusineType" asp-items="@Html.GetEnumSelectList<CusineType>()"></select>
        <span asp-validation-for="CusineType"></span>
    </div>

    <input type="submit" name="save" value="Save"/>
</form>